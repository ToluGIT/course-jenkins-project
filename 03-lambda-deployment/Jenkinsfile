pipeline {
    agent any

    
    stages {

        stage('Setup') {
            steps {
                sh "pip3 install -r 03-lambda-deployment/lambda-app/tests/requirements.txt"
                echo "success-1"
            }
        }
        stage('Test') {
            steps {
                sh "pytest"
                echo "success-2"                
            }
        }

        stage('Build') {
            steps {
                sh "sam build -t 03-lambda-deployment/lambda-app/template.yaml"
                echo "success-3"
            }
        }
        stage('Deploy') {

            environment {
                AWS_ACCESS_KEY_ID = credentials('aws-access-key')
                AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
            }
            
            steps {
                sh "sam deploy -t 03-lambda-deployment/lambda-app/template.yaml --no-confirm-changeset --no-fail-on-empty-changeset"
                echo "success-4"
            }
        }
      
    }
}